{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ReverseProxy": {
    "Routes": {
      "reviews-route": {
        "ClusterId": "reviews-cluster",
        "Match": {
          "Path": "/api/reviews/{**catch-all}"
        }
      },
      "reservations-route": {
        "ClusterId": "reservations-cluster",
        "Match": {
          "Path": "/api/reservations/{**catch-all}"
        }
      },
      "catalog-route": {
        "ClusterId": "catalog-cluster",
        "Match": {
          "Path": "/api/Service/{**catch-all}"
        }
      },
      "aggregator-route": {
        "ClusterId": "aggregator-cluster",
        "Match": {
          "Path": "/api/aggregator/{**catch-all}"
        }
      }
    },
    "Clusters": {
      "reviews-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "https://localhost:7254"
          }
        }
      },
      "reservations-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "https://localhost:7039"
          }
        }
      },
      "catalog-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "https://localhost:7218"
          }
        }
      },
      "aggregator-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "http://localhost:5100"
          }
        }
      }
    }
  }
}